<h1>Please register</h1>

<%= form_for @user do |f| %>
  <fieldset>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit 'Register' %>
    </div>
  </fieldset>
<% end %>
