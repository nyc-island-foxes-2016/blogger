<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <div>  
    <%= current_user.username %> is logged in
  </div>
<% end %>

<% if flash.any? %>
  <div id="flash-container">
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash flash-#{key}" %>
    <% end %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
